- if url
  .d-flex.flex-column
    = link_to(url, class: "badge rounded-bottom-0 border-bottom #{build_status_category_color(status)}") do
      %i.fa.me-2{ class: build_status_icon(status), title: status.humanize }
      %span.architecture #{architecture} :
      = text
    = link_to(rpm_lint_url, class: "badge text-bg-secondary rounded-top-0") do
      %i.fas.fa-gauge-high
      RPM Lint
- else
  %span.badge{ class: build_status_category_color(status), title: details }
    %i.fa.me-2{ class: build_status_icon(status) }
    %span.architecture #{architecture} :
    = text
